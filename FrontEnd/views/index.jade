extends layout

block content
  if (!user)
    div(class="row")
        div(class="col-sm-6 col-md-4 col-md-offset-4")
        h2(class="text-center login-title") health.mate
        div(class='container')
            div(class='row')
                div(class='col-sm-6 col-md-4 col-md-offset-4')
                    div(class="account-wall")
                        form(action="/login", method="GET")
                            button(class="btn btn-lg btn-primary", type="submit") Login

                        form(action="/register", method="GET")
                            button(class="btn btn-lg btn-primary", type="submit") Sign Up Now!

  if (user)
    h1 #{username}'s health.mate

    each pdf in pdfs
        Your health record from #{pdf.hospital_name} on #{pdf.date}:
        a(href="/view_pdf?id=" + pdf._id) Here
        br

    .container
        a(class='btn btn-primary', href='/add_info') Add Info